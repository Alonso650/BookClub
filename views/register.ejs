<%- include("./partials/header") %>

<div class="row">
	<div class="col-md-12">
		<form class="form-signin" action="/register" method="POST">
			<h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
			<label for="inputUsername" class="sr-only">Username</label>
			<input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username">
			<label for="inputPassword" class="sr-only">Password</label>
			<input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password">
			<label for="inputFirstName" class="sr-only">First Name</label>
			<input type="text" id="inputFirstName" class="form-control" name="firstName" placeholder="First Name">
			<label for="inputLastName" class="sr-only">Last Name</label>
			<input type="text" id="inputLastName" class="form-control" name="lastName" placeholder="Last Name">
			<label for="inputEmail" class="sr-only">Email</label>
			<input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email">
			<label for="Avatar" class="sr-only">Avatar</label>
			<input type="text" id="Avatar" class="form-control" name="avatar" placeholder="Avatar URL">
			<label for="adminCode" class="sr-only">Admin Code</label>
			<input type="text" id="adminCode" class="form-control" name="adminCode" placeholder="Admin Code">
			<button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
		</form>
		<div class="form-signin">
			<a href="/books">Return</a>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>
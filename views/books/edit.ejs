<%- include("../partials/header") %>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Editing <%= book.title %> Entry</h1>
	</div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/books/<%= book.slug %>/?_method=PUT" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title">Title</label>
				<input class="form-control" type="text" name="book[title]" value="<%= book.title %>">
			</div>
			<div class="form-group">
				<label for="author">Author</label>
				<input class="form-control" type="text" name="book[author]" value="<%= book.author %>">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" name="book[description]" value="<%= book.description %>">
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input type="file" id="image" name="image" accept="image/*" value="<%= book.image %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Update Entry</button>
			</div>
		</form>
		<a href="/books">Return</a>
	</div>
</div>

<%- include("../partials/footer") %>
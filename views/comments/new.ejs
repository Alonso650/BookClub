<%- include("..partials/header") %>
<div class="row">
	<h1 style="text-align: center">Add A New Comment to <%= books.title %> Entry</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/books/<%= books.slug %>/comments" method="POST">
			<div id="comment_text" class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/books">Return</a>
	</div>
</div>
<%- include("..partials/footer") %>